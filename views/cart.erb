<h2>Your cart</h2>
	<table class="table table-striped">
		<thead>
		<tr>
		  <th>#</th>
		  <th>Name</th>
		  <th>Price</th>
		  <th>Qty</th>
		</tr>
		</thead>
		<tbody>
		
		<% total_price = 0 %>
		<% total_qty = 0 %>

		<% @orders.each do |item| %>	
			<tr>
			  <th> <%= item[0].id %></th>
			  <td> <%= item[0].title %></td>
			  <td><%= item[0].price %></td>
			  <td><%= item[1] %></td>
			</tr>
			<%= total_price += item[0].price * item[1].to_i   %>
			<%= total_qty += item[1].to_i %>
		<% end %>
		
		<tr>
		  <th></th>
		  <td></td>
		  <td>Total: <%= total_price %> rub</td>
		  <td><%= total_qty %></td>
		</tr>

		</tbody>
	</table>

	<form action="/place_order" method="POST">		
		<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">
		<div>
	      <label class="form-label">Your name</label>
	      <input name="order[name]" type="text"  class="form-control">
	    </div>

	    <div>
	      <label class="form-label">Your phone</label>
	      <input name="order[phone]" type="text"  class="form-control">
	    </div>

	    <div>
	      <label class="form-label">Delivery address</label>
	      <textarea name="order[address]" class="form-control"></textarea>
		</div>
		<br>
		<button type="submit" class="btn btn-success btn-lg">Place order</button>
	</form>